<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tabLoginRegisterFragment">

    <fragment
        android:id="@+id/tabLoginRegisterFragment"
        android:name="onyx.movil.fragments.tabs.TabLoginRegisterFragment"
        android:label="fragment_tab_login_register"
        tools:layout="@layout/fragment_tab_login_register" >
        <action
            android:id="@+id/action_tabLoginRegisterFragment_to_gruposFragment"
            app:destination="@id/gruposFragment" />
    </fragment>

    <fragment
        android:id="@+id/gruposFragment"
        android:name="onyx.movil.fragments.GruposFragment"
        android:label="fragment_grupos"
        tools:layout="@layout/fragment_grupos" >
        <action
            android:id="@+id/action_gruposFragment_to_grupoDetailsFragment"
            app:destination="@id/grupoDetailsFragment" />
        <action
            android:id="@+id/action_gruposFragment_to_grupoCreateFragment"
            app:destination="@id/grupoCreateFragment" />
    </fragment>

    <fragment
        android:id="@+id/tareasFragment"
        android:name="onyx.movil.fragments.TareasFragment"
        android:label="fragment_tareas"
        tools:layout="@layout/fragment_tareas" >
        <action
            android:id="@+id/action_tareasFragment_to_tareaCreateFragment"
            app:destination="@id/tareaCreateFragment" />
        <action
            android:id="@+id/action_tareasFragment_to_tareaDetailsFragment"
            app:destination="@id/tareaDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/perfilFragment"
        android:name="onyx.movil.fragments.PerfilFragment"
        android:label="fragment_perfil"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/grupoCreateFragment"
        android:name="onyx.movil.fragments.GrupoCreateFragment"
        android:label="fragment_grupo_create"
        tools:layout="@layout/fragment_grupo_create">
        <action
            android:id="@+id/action_grupoCreateFragment_to_grupoDetailsFragment"
            app:destination="@id/grupoDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/tareaCreateFragment"
        android:name="onyx.movil.fragments.TareaCreateFragment"
        android:label="fragment_tarea_create"
        tools:layout="@layout/fragment_tarea_create">
        <action
            android:id="@+id/action_tareaCreateFragment_to_tareaDetailsFragment"
            app:destination="@id/tareaDetailsFragment" />
        <argument
            android:name="idGrupo"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/grupoDetailsFragment"
        android:name="onyx.movil.fragments.GrupoDetailsFragment"
        android:label="fragment_grupo_details"
        tools:layout="@layout/fragment_grupo_details">
        <action
            android:id="@+id/action_grupoDetailsFragment_to_tareaCreateFragment"
            app:destination="@id/tareaCreateFragment" />
        <action
            android:id="@+id/action_grupoDetailsFragment_to_tareaDetailsFragment"
            app:destination="@id/tareaDetailsFragment" />
        <action
            android:id="@+id/action_grupoDetailsFragment_to_gruposFragment"
            app:destination="@id/gruposFragment" />
    </fragment>

    <fragment
        android:id="@+id/tareaDetailsFragment"
        android:name="onyx.movil.fragments.TareaDetailsFragment"
        android:label="fragment_tarea_details"
        tools:layout="@layout/fragment_tarea_details" >
        <action
            android:id="@+id/action_tareaDetailsFragment_to_tareaEditFragment"
            app:destination="@id/tareaEditFragment" />
    </fragment>

    <fragment
        android:id="@+id/tareaEditFragment"
        android:name="onyx.movil.fragments.TareaEditFragment"
        android:label="fragment_tarea_edit"
        tools:layout="@layout/fragment_tarea_edit" >
        <action
            android:id="@+id/action_tareaEditFragment_to_tareaDetailsFragment"
            app:destination="@id/tareaDetailsFragment" />
    </fragment>

</navigation>