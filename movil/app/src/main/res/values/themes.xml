<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Onyx" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primario</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- floating action button-->
        <item name="colorPrimaryContainer">@color/primario_claro</item>
        <item name="colorOnPrimaryContainer">@color/oscuro</item>

        <item name="colorSecondary">@color/primario_oscuro</item>
        <item name="colorOnSecondary">@color/oscuro</item>

        <item name="colorSurface">@color/primario_claro</item>
        <item name="colorOnSurface">@color/oscuro</item>

        <item name="colorSurfaceVariant">@color/primario_oscuro</item>
        <item name="colorOnSurfaceVariant">@color/primario_oscuro</item>

        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:focusable">@color/primario_claro</item>

        <item name="android:windowSplashScreenIconBackgroundColor">@color/ic_launcher_background</item>
    </style>

    <style name="Theme.Onyx" parent="Base.Theme.Onyx" />
</resources>