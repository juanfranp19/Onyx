<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="onyx.escritorio.controllers.GruposController"
    alignment="TOP_LEFT">

    <VBox spacing="24" alignment="TOP_LEFT">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24" />
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="16">
            <Label text="Mis Grupos" styleClass="view-title" />
        </HBox>

        <!-- Empty State (Visible by default) -->
        <VBox fx:id="emptyState" styleClass="empty-state-container" VBox.vgrow="ALWAYS" alignment="CENTER">
            <Label text="ðŸ“‚" styleClass="empty-state-icon" />
            <Label text="No tienes grupos asignados" styleClass="empty-state-title" />
            <Label text="Crea un nuevo grupo para empezar a colaborar con tu equipo."
                styleClass="empty-state-description" />
        </VBox>

        <!-- Content List (Hidden by default) -->
        <ScrollPane fx:id="contentList" fitToWidth="true" style="-fx-background-color: transparent;" visible="false" managed="false" maxHeight="425">
            <VBox fx:id="groupsContainer" spacing="16">
                <!-- Items will be added here dynamically -->
            </VBox>
        </ScrollPane>
    </VBox>

    <!-- FAB Button -->
    <Button text="+" styleClass="fab-button" onAction="#handleCreateGroup" StackPane.alignment="BOTTOM_RIGHT">
        <StackPane.margin>
            <Insets right="32" bottom="32" />
        </StackPane.margin>
        <tooltip>
            <Tooltip text="Crear nuevo grupo" />
        </tooltip>
    </Button>

</StackPane>
